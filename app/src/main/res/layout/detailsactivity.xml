<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:background="@drawable/gradient">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/userprofile"
    app:civ_border_width="2dp"
    app:civ_border_color="#FF000000"
    android:layout_below="@+id/profilepictextview"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:id="@+id/profilepicimageview"
    />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilepicimageview"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/progress_profilepic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT THE PROFILE PIC"
        android:textColor="#ffffff"
        android:id="@+id/profilepictextview"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/designsignin"
        android:fontFamily="sans-serif-light"
        android:hint="Enter Username"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/profilepicimageview"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/usernameedit"
        android:inputType="text"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/designsignin"
        android:fontFamily="sans-serif-light"
        android:hint="Enter Mobile Number"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/usernameedit"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/mobilenoedit"
        android:inputType="number"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/mobilenoedit"
            android:layout_marginTop="25dp"
            android:id="@+id/linearlayoutlocality">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Locality"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="15sp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/localitySpinner"
                android:background="@drawable/designsignin"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                >

            </Spinner>



        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayoutlocality"
            android:id="@+id/saveinfobutton"
            android:layout_marginTop="50dp"
            android:background="@drawable/signinbuttonshape"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="SAVE USER INFO"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>
</ScrollView>